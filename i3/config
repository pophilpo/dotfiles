bindsym $mod+Shift+r restart
### Tweaks ###
# Set main key (Win)
set $mod Mod4

# Press MOD key and click on mouse to move your window
floating_modifier $mod

# Focus doesn't follow the mouse
focus_follows_mouse yes

# Manage popups
popup_during_fullscreen smart

# Fonts
font pango: Mononoki 11

# xwinwrap
# exec xwinwrap -g 1920x1080 -ov -ni -s -nf -- gifview -w WID ~/.config/i3/gif.gif -a

### Main settings ###
# Workspace names (and variables)
set $workspace1 "1: "
set $workspace2 "2: "
set $workspace3 "3: "
set $workspace4 "4: "

## Rules ##
assign [class="*|Dolphin|vifm|ranger|zathura|draw.io"] $workspace1
assign [class="konsole|kitty|urxvt|gnome-terminal|alacritty"] $workspace1
assign [class="Emacs|Gvim|vim|nvim|Code|marktext|Boostnote"] $workspace1
assign [class="Google-chrome|firefox|Chromium"] $workspace2
assign [class="TelegramDesktop"] $workspace4

## Keyboard Settings ##
# Apps
bindsym $mod+Return exec alacritty
bindsym $mod+Mo Select window, open new app

# Rofi drun mode
bindsym $mod+d exec "rofi -modi drun -show drun -show-icons -sort -theme ~/.config/rofi/GreatI3.rasi"

bindsym $mod+p exec "scrot /home/philipp/Pictures/Screenshots/"

# System / Volume
bindsym XF86AudioMute "exec amixer -D pulse sset Master toggle && notify-send \"Volume\" \"Sound is (un)muted\" --urgency low"
bindsym XF86AudioRaiseVolume "exec amixer -D pulse sset Master 5%+ && notify-send \"Volume\" \"Volume added +5%\n    Volume level is now $(amixer -D pulse get Master | awk -F 'Left:|[][]' 'BEGIN {RS=\"\"}{ print $3 }')\" --urgency low"
bindsym XF86AudioLowerVolume "exec amixer -D pulse sset Master 5%- && notify-send \"Volume\" \"Volume added -5%\n    Volume level is now $(amixer -D pulse get Master | awk -F 'Left:|[][]' 'BEGIN {RS=\"\"}{ print $3 }')\" --urgency low"


# System / Brightness
bindsym $mod+F1 exec xbacklight -dec 20
bindsym $mod+F2 exec xbacklight -inc 20


# Moving from one window to another
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Choose one of your workspaces
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4

# Move window to the workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4

# Move windows
bindsym $mod+Shift+h move left 20px
bindsym $mod+Shift+j move down 20px
bindsym $mod+Shift+k move up 20px
bindsym $mod+Shift+l move right 20px

# Resizing Windows
bindsym $mod+Ctrl+l resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+k resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+j resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+h resize grow width 10 px or 10 ppt

# Make window fullscreen
bindcode 95 fullscreen toggle

# Reload Configuration

# Kill a window
bindsym $mod+q exec xdotool getwindowfocus windowkill

# Floating vector
bindsym $mod+v split t

# Make all windows tiling in the workspace
bindsym $mod+i [workspace=$workspace1] floating toggle
### Autostart ###
exec_always --no-startup-id feh --bg-fill ~/Pictures/Wallpaper.jpg
exec --no-startup-id setxkbmap -model pc105 -layout us,ru -option grp:win_space_toggle
# Automount USB
exec --no-startup-id udiskie
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
# Cursor
### i3-gaps ###
# Borders for windows
for_window [class=".*"] border pixel 5

# Gaps for i3bar
for_window [class="i3bar"] gaps outer current set 10

# Gaps
gaps inner 10
gaps outer 4


